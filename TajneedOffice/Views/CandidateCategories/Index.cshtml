@model IEnumerable<TajneedOffice.Models.CandidateCategory>
@{
    ViewData["Title"] = "تصنيفات المرشحين";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-list"></i> تصنيفات المرشحين</h1>
                <div>
                    <form asp-action="SeedData" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-success me-2" onclick="return confirm('هل أنت متأكد من حذف جميع التصنيفات الحالية وإدخال البيانات الجديدة؟')">
                            <i class="fas fa-seedling"></i> إدخال البيانات الافتراضية
                        </button>
                    </form>
                    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> إضافة تصنيف جديد</a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>م</th>
                                <th>اسم التصنيف</th>
                                <th>رمز التصنيف</th>
                                <th>الوصف</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CategoryName</td>
                                    <td><span class="badge bg-secondary">@item.CategoryCode</span></td>
                                    <td>@(string.IsNullOrEmpty(item.Description) ? "-" : (item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description))</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 