@{
    ViewData["Title"] = "الرئيسية";
    Layout = "_Layout";
}

<!-- Page Header -->
<div class="container-fluid page-header mb-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="page-title mb-3">مرحبا بك في مكتب تجنيد سلاح الجو السلطاني العماني</h1>
            <p class="lead page-subtitle">نظام إدارة المرشحين والتقييمات الإلكتروني</p>
        </div>
    </div>
</div>

<div class="container-fluid">

    <!-- Statistics Section -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-4 bg-primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <h3 class="stat-value">@ViewBag.TotalCandidates</h3>
                        <p class="stat-label mb-0">إجمالي المرشحين</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-4 bg-success">
                        <i class="fas fa-sitemap"></i>
                    </div>
                    <div>
                        <h3 class="stat-value">@ViewBag.Categories?.Count</h3>
                        <p class="stat-label mb-0">فئات المرشحين</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-4 bg-info">
                        <i class="fas fa-plane-departure"></i>
                    </div>
                    <div>
                        <h3 class="stat-value">@ViewBag.Airbases?.Count</h3>
                        <p class="stat-label mb-0">القواعد الجوية</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-4 bg-warning">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <div>
                        <h3 class="stat-value">8</h3>
                        <p class="stat-label mb-0">محاور التقييم</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row justify-content-center text-center">
        <div class="col-12 mb-4">
            <h2 class="section-title">الوصول السريع</h2>
            <hr class="title-divider mx-auto">
        </div>
        <div class="col-lg-3 col-md-4 mb-4">
            <a href="@Url.Action("Index", "Candidates")" class="action-card text-decoration-none">
                <div class="card h-100 action-card-hover">
                    <div class="card-body">
                        <div class="action-icon text-info mb-3"><i class="fas fa-list-alt fa-3x"></i></div>
                        <h5 class="card-title">عرض المرشحين</h5>
                        <p class="card-text text-muted">استعراض وإدارة جميع المرشحين.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-4 mb-4">
            <a href="@Url.Action("Create", "Candidates")" class="action-card text-decoration-none">
                <div class="card h-100 action-card-hover">
                    <div class="card-body">
                        <div class="action-icon text-success mb-3"><i class="fas fa-user-plus fa-3x"></i></div>
                        <h5 class="card-title">إضافة مرشح جديد</h5>
                        <p class="card-text text-muted">إدخال بيانات مرشح جديد إلى النظام.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-4 mb-4">
             <a href="@Url.Action("Index", "SystemSetup")" class="action-card text-decoration-none">
                <div class="card h-100 action-card-hover">
                    <div class="card-body">
                        <div class="action-icon text-primary mb-3"><i class="fas fa-cogs fa-3x"></i></div>
                        <h5 class="card-title">إعدادات النظام</h5>
                        <p class="card-text text-muted">إدارة الإعدادات الأساسية للنظام.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
