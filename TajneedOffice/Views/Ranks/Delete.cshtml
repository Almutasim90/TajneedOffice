@model TajneedOffice.Models.Rank

@{
    ViewData["Title"] = "حذف الرتبة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">حذف الرتبة</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>هل أنت متأكد من حذف هذه الرتبة؟</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">الرقم:</dt>
                        <dd class="col-sm-9">@Model.RankId</dd>
                        
                        <dt class="col-sm-3">اسم الرتبة:</dt>
                        <dd class="col-sm-9">@Model.RankName</dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="RankId" />
                        <input type="submit" value="حذف" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 