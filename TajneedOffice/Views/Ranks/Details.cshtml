@model TajneedOffice.Models.Rank

@{
    ViewData["Title"] = "تفاصيل الرتبة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">تفاصيل الرتبة</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">الرقم:</dt>
                        <dd class="col-sm-9">@Model.RankId</dd>
                        
                        <dt class="col-sm-3">اسم الرتبة:</dt>
                        <dd class="col-sm-9">@Model.RankName</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.RankId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> تعديل
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> العودة للقائمة
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 