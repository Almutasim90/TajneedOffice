@model TajneedOffice.Models.Rank

@{
    ViewData["Title"] = "تعديل الرتبة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">تعديل الرتبة</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RankId" />
                        
                        <div class="form-group">
                            <label asp-for="RankName" class="control-label">اسم الرتبة</label>
                            <input asp-for="RankName" class="form-control" />
                            <span asp-validation-for="RankName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-3">
                            <input type="submit" value="حفظ" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 